@using SGCorp.Models
@model List<Suggestion>

@{
    ViewBag.Title = "ViewSuggestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewSuggestions</h2>

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Suggestions</div>

    <!-- Table -->
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Suggestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var apps in Model)
                {
                    <tr>
                        <td>@apps.EmployeeName</td>
                        <td>@apps.SuggestionText</td>
                    </tr>
                    
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no suggestions to view.</p>
    }

</div>