@model List<SWCDotNet.Models.Student>
@{
    ViewBag.Title = "ListApprentices";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>SWC .NET Apprentices</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Home State</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.LastName</td>
                <td>@student.FirstName</td>
                <td>@student.State</td>
                <td>@Html.ActionLink("Edit", "Edit", "Student", new { id = @student.StudentId }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Remove", "Remove", "Student", new { id = @student.StudentId }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </tbody>

</table>

