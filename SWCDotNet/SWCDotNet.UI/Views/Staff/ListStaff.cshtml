@model List<SWCDotNet.Models.Staff>
@{
    ViewBag.Title = "ListStaff";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Staff Members</h2>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Role</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var staff in Model)
    {
        <tr>
            <td>@staff.LastName</td>
            <td>@staff.FirstName</td>
            <td>@staff.Role</td>
            <td>@Html.ActionLink("Edit", "Edit", "Staff", new {id = @staff.StaffId}, new {@class = "btn btn-primary"})</td>
            <td>@Html.ActionLink("Remove", "Remove", "Staff", new {id = @staff.StaffId}, new {@class = "btn btn-danger"})</td>
        </tr>
    }
    </tbody>

</table>